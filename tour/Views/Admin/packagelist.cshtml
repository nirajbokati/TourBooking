@model IEnumerable<tour.Models.tblPackage>

@{
    ViewBag.Title = "packagelist";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<style>
    .packagelist {
        color: #fb3535 !important;
        font-weight: 600;
        font-family: 'Century Gothic';
    }


    table {
        background-color: #fff;
    }

        table th {
            background-color: #f2f4f7;
            padding: 10px !important;
        }

    .btn a {
        color: #fff !important;
    }


    .btn-danger {
        color: #FFFFFF;
        background-color: #f44336 !important;
        border-color: #f44336;
        box-shadow: 0 2px 2px 0 rgba(244, 67, 54, 0.14), 0 3px 1px -2px rgba(244, 67, 54, 0.2), 0 1px 5px 0 rgba(244, 67, 54, 0.12);
        top: 10px;
        height: 43px;
        width: 85px;
    }


    .btn-danger {
        width: 150px !important;
        border-radius: 30px !important;
        border: none;
        border-radius: 3px;
        position: relative;
        padding: 12px 30px;
        margin: 50px 0px 20px 0px;
        font-size: 12px;
        font-weight: 400;
        text-transform: uppercase;
        letter-spacing: 0;
        will-change: box-shadow, transform;
        transition: box-shadow 0.2s cubic-bezier(0.4, 0, 1, 1), background-color 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .search {
        margin-top: 58px !important;
    }
</style>

<div class="row">
    <div class="col-lg-9">
        <button class="btn btn-danger">
            @Html.ActionLink("Create New", "Index")
        </button>

        <div class="col-lg-3  pull-right search">
            <div class="input-group stylish-input-group input-append">
                <input type="text" class="form-control" placeholder="Search Package">
                <span class="input-group-addon">
                    <button type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
           
        </div>

        <table id="myDataTable" class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tour_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Package_Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Packagedetails)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>

                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tour_Name)
                </td>
               

                <td>
                    @*@Html.DisplayFor(modelItem => item.Package_Image)*@
                    <img src="~/Content/Images/@item.Package_Image" style="width:70px; height:60px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Packagedetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Tour_ID })
                </td>
            </tr>
    }

        </table>
        <script>
            $(document).ready(function () {
                var x = document.getElementById("demop");
                var oTable = $('#myDataTable').dataTable();
        </script>
    </div>
</div>
