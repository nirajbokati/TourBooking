@model tour.Models.tblPackage
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui.min.js"></script>
<style>
    .index {
        color: #fb3535 !important;
        font-weight: 600;
        font-family: 'Century Gothic';
    }

    .form-group {
        padding: 10px;
    }

    .form-control {
        height: 50px;
    }

    .preview {
        border: 1px solid #333;
    }

    .image{
        border: 1px solid #333;
        background-color:#f2f2f2;
    }
</style>

@*<link href="~/Content/ckeditor/contents.css" rel="stylesheet" />*@
<script src="~/Content/ckeditor/ckeditor.js"></script>
<div class="col-lg-9">

    @using (Html.BeginForm("Index", "Admin", FormMethod.Post,
     new { enctype = "multipart/form-data" }))
    {
        <div class="row" style="margin-top:20px;">
            <div class="col-lg-8 col-lg-offset-1">
                <div class="panel">
                    <div class="panel-heading">
                        <h4 class="text-center">Add Destination</h4>
                    </div>
                    <div class="panel-body">

                        <div class="form-group">
                            <label for="name">Image</label>
                            <div class="image" style="width:100%;height:200px;">
                                <img src="" id="imagePreview" alt="Preview Image" style="width:100%;height:200px;" />
                                <input type="file" name="file" id="file" />
                            </div>
                        </div>
                    </div>

                    
                    <div class="form-group">
                        <label for="name"> Packagename </label>
                        @Html.TextBoxFor(model => model.Tour_Name, new { @class = "form-control", @placeholder = "Product Name" })
                    </div>
                    <div class="form-group">
                        <label for="name">Price</label>
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @placeholder = "Price" })
                    </div>

                    <div class="col-lg-6">
                        <h3>Start Date</h3>
                        @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", @id = "datepicker",  @placeholder = "Start Date" })
                    </div>
                    <div class="col-lg-6">
                        <h3>End Date</h3>
                        @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control", @id = "datepickers", @placeholder = "EndDate" })
                    </div>
                    <div class="form-group">
                        <h3>Packagedetails</h3>
                        @Html.TextBoxFor(model => model.Packagedetails, new { @id = "ckeditor", @class = "form-control" })
                        <script>
                            CKEDITOR.replace("ckeditor");
                        </script>
                    </div>
                </div>
                <div class="form-group pull-right">
                    <button class="btn btn-danger" type="submit">ADD</button>
                </div>
            </div>
        </div>

    }
</div>

<script>
    $('#file').change(function () {
        readImgUrlAndPreview(this);
        function readImgUrlAndPreview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imagePreview').attr('src', e.target.result);
                }
            };
            reader.readAsDataURL(input.files[0]);
        }
    });
</script>


<script>
    $('#datepicker').datepicker({ minDate: 0 });
</script>


<script>
    $('#datepickers').datepicker({ minDate: 0 });
</script>


