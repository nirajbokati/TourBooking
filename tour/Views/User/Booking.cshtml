@model tour.Models.BookingModel
@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var bok = Model.tblBookings;
        }

<style>

    body{
         background-color:#ededed;
    }
    table th{
        background-color:#f2f4f7;
        padding:10px;
    }

    .btn {
        background-color: #fb3535 !important;
        border:none!important;
        color:#fff;
    }
    .secondnav {
        background-color: #5f5f5f!important;
       
    }
        .secondnav ul li a {
            color: #fff!important;
        }
        .booking{
            text-decoration:underline!important;
        }
</style>
   
<body>
    <div class="secondcontainer">

     

        <div class="row">


            <div class="col-lg-9 col-lg-offset-2">
                <div class="navbar-default  secondnav" style="margin-top:100px;">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="row">
                            <div class="col-lg-10 col-lg-offset-1">
                                <div class="navbar-collapse collapse">
                                    <ul class="nav navbar-nav pull-left ">
                                        <li> <a href="/User/Overview" class="dashboard"> Dashboard</a></li>
                                        <li> <a href="/User/Booking" class="booking"> Booked Packages</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel">
                    <div class="panel-heading">
                        <h4> View Your Booked Packages</h4>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <table class="table table-hover table-bordered  table-responsive">
                                    <thead>
                                        <tr>
                                            <th>Booking No. </th>
                                            <th>Package Name</th>
                                            <th>Travel Date</th>
                                            <th>Return Date</th>
                                            <th>Cost</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in bok)
                            {
                                var pac = Model.tblPackages.Where(x => x.Tour_ID == item.TourId);
                                foreach (var item1 in pac)
                                {


                                    <tr>
                                        <td scope="row">@item.BookingId</td>
                                        <td>@item1.Tour_Name</td>
                                        <td>@item1.StartDate</td>
                                        <td>@item1.EndDate</td>
                                        <td>@item1.Price</td>
                                        <td style="text-align: center;">
                                            <a href='#'>
                                                <button class="btn btn-sm review"> Review</button>
                                            </a>
                                            <a href='#'>
                                                <button class="btn btn-danger btn-sm "> Delete</button>


                                            </a>


                                        </td>


                                    </tr>
                    }
                }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


 